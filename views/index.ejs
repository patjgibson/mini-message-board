<html>

<head>
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1>
        <%= title%>
    </h1>
    <% for ( let i=0; i<messages.length; i++) { %>
        <div>
            <p><%= messages[i].user %></p>
            <p><%= messages[i].text %></p>
            <p><%= messages[i].added %></p>
            <% 
                let messageEncode = encodeURIComponent(JSON.stringify(messages[i]));
            %>
            <a href="/message?message=<%= messageEncode %>">Open</a>

            <!-- <form action="/message">
                <input type="submit" value="Open" />
            </form>             -->
            <hr>
        </div>
    <% } %>

    <form action="/new">
        <input type="submit" value="New message" />
    </form>

</body>

</html>